<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>PRI Parallax</name>
	<author>Devpri</author>
	<creationDate>Jun 2014</creationDate>
	<copyright>Copyright (C) 2010 - 2014 Devpri. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later, see LICENSE.txt</license>
	<authorEmail>contact@devpri.com</authorEmail>
	<authorUrl>www.devpri.com</authorUrl>
	<version>1.1</version>
	<description>
		<![CDATA[
		PRI Parallax is a Joomla Parallax module for image and video parallax. 
		 ]]>
	</description>
	<files>
		<filename module="mod_pri_parallax">mod_pri_parallax.php</filename>
		<folder>assets</folder>
		<folder>languages</folder>
		<folder>fields</folder>		
		<folder>libraries</folder>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_pri_parallax.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB/en-GB.mod_pri_parallax.ini</language>
		<language tag="en-GB">languages/en-GB/en-GB.mod_pri_parallax.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/modules/mod_pri_parallax/fields">
			        <field type="settings"/>
					<field name="parallax_type" type="list" default="image" label="Parallax Type" description="Select parallax type.">
						<option value="image">Image</option>
						<option value="video">Video</option>
					</field>
					<field name="disable_parallax_on_mobile" type="list" default="1" label="Disable On Mobile" description="Disable Parallax on Mobile and Tablet devices.">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
					</field>
					<field name="parallax_effect" type="list" default="effect1"  label="Effect" description="Effect for image/video.">
						<option value="none">None</option>
						<option value="effect1">Effect 1</option>
						<option value="effect2">Effect 2</option>
						<option value="effect3">Effect 3</option>
						<option value="effect4">Effect 4</option>
						<option value="effect5">Effect 5</option>
						<option value="effect6">Effect 6</option>
						<option value="effect7">Effect 7</option>
						<option value="effect8">Effect 8</option>
						<option value="effect9">Effect 9</option>
						<option value="effect10">Effect 10</option>
						<option value="effect11">Effect 11</option>
						<option value="effect12">Effect 12</option>
					</field>
					<field name="parallax_content_effect" type="list" default="effect1"  label="Content Effect" description="Parallax effect for content.">
						<option value="none">None</option>
						<option value="effect1">Effect 1</option>
						<option value="effect2">Effect 2</option>
						<option value="effect3">Effect 3</option>
						<option value="effect4">Effect 4</option>
						<option value="effect5">Effect 5</option>
						<option value="effect6">Effect 6</option>
						<option value="effect7">Effect 7</option>
						<option value="effect8">Effect 8</option>
						<option value="effect9">Effect 9</option>
						<option value="effect10">Effect 10</option>
					</field>
					<field name="parallax_distance" type="text" default="200"  label="Distance" description="Distance covered during on the scroll's. (This option does not apply to all effects.)"/>		
					<field name="parallax_content_distance" type="text" default="200"  label="Content Distance" description="Distance covered during on the scroll's. (This option does not apply to all effects.)"/>		
					<field name="custom_css" type="editor" editor="codemirror"  label="Custom Css" description="Custom css"/>
			</fieldset>
			<fieldset name="content" label="Content">
				<field name="content_class" type="text" default=""  label="Content Class" description="Class for content text."/>		
				<field name="content_padding" type="text" default="100px 0"  label="Content Padding" description="Padding for content text."/>		
				<field name="prepare_content" type="list" default="1" label="Prepare content" description="Prepare content.">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				<field name="content_text" type="editor" default="" rows="4" filter="safehtml" label="Content" description="Modue text content."/>		
			</fieldset>
			<fieldset name="image" label="Image">
				<field name="image_url" type="media" default=""  label="Parallax Image" description="Parallax image url."/>
				<field name="image_background_color" type="color" default="#fff"  label="Background Color" description="Parallax image url."/>
				<field name="image_background_size" type="list" default="cover"  label="Background Size" description="Background Image size.">
					<option value="auto">Auto</option>
					<option value="cover">Cover</option>
					<option value="100%">100%</option>
				</field>
				<field name="image_background_repeat" type="list" default="fixed"  label="Background Repeat" description="Background Image Repeat.">
					<option value="no-repeat">No Repeat</option>
					<option value="repeat-x">Repeat X</option>
					<option value="repeat-y">Repeat Y</option>
					<option value="repeat">Repeat</option>
				</field>
				<field name="image_background_position" type="list" default="fixed"  label="Background Position" description="Background Image Position.">
					<option value="top">Top</option>
					<option value="center">Center</option>
					<option value="bottom">Bottom</option>
					<option value="left">Left</option>
					<option value="right">Right</option>
				</field>			
			</fieldset>
			<fieldset name="video" label="Video">
				<field name="video_background_mp4" type="text" default=""  label="Background Video MP4" description="Background Video MP4."/>
				<field name="video_background_webm" type="text" default=""  label="Background Video Webm" description="Background Video Webm."/>
				<field name="video_background_ogg" type="text" default=""  label="Background Video OGG" description="Background Video Ogg."/>
				<field name="video_background_poster" type="media" default=""  label="Background Poster" description="Background Poster."/>
				<field name="video_background_loop" type="list"  default="true"  label="Background Video Loop" description="Background Video Loop">
					<option value="false">False</option>
					<option value="true">True</option>
				</field>
				<field name="video_background_audio" type="list"  default="mute"  label="Background Video Audio" description="Background Video Audio">
					<option value="mute">Off</option>
					<option value="on">On</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field name="cachemode" type="hidden" default="static">
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
